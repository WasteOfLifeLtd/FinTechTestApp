@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication.Models.Request
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
